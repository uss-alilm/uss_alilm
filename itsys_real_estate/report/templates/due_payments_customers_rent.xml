<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="report_due_payments_customers_rent">
		<t t-call="web.html_container">
			<t t-call="web.internal_layout">
					<div class="page">
			            <link rel="stylesheet" href="/itsys_real_estate/static/src/css/report-style.css"/>
						<h2>Customers Due Payments</h2>
						<table class="gridtable">
							<tr>
								<th align="center">Date From:</th>
								<th align="center">Date To:</th>
							</tr>
							<tr>
								<td align="center"><span t-esc="date_start"/></td>
								<td align="center"><span t-esc="date_end"/></td>
							</tr>
						</table>
						<br/>
						<table class="report_table">
							<tr>
								<th>Customer</th>
								<th>Installment</th>
								<th>Due Date</th>
								<th>Contract Ref</th>
								<th>Region</th>
								<th>Building</th>
								<th>Unit</th>
							</tr>
							<tr t-foreach="get_lines" t-as="line">
								<td><span t-esc="line['contract_partner_id'].name"/></td>
								<td><span t-esc="round(line['amount'],2)"/></td>
								<td><span t-esc="line['date']"/></td>
								<td><span t-esc="line['loan_id'].name"/></td>
								<td><span t-esc="line['loan_id'].region.name"/></td>
								<td><span t-esc="line['loan_id'].building.name"/></td>
								<td><span t-esc="line['loan_id'].building_unit.name"/></td>
							</tr>
							<tr>
								<th colspan="6" style="text-align:right">Total</th>
								<th colspan="3"><t t-esc="get_total" /></th>
							</tr>
						</table>
					</div>
				</t>
			</t>
		</template>
	</data>
</odoo>